<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/legendLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="horizontal"
    android:background="@color/calendar_primary"
    tools:ignore="HardcodedText">

    <TextView
        android:id="@+id/legendText1"
        style="@style/calender_day"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:text="Sun" />

    <TextView
        android:id="@+id/legendText2"
        style="@style/calender_day"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Mon" />

    <TextView
        android:id="@+id/legendText3"
        style="@style/calender_day"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Tue"/>

    <TextView
        android:id="@+id/legendText4"
        style="@style/calender_day"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:text="Wed"/>

    <TextView
        android:id="@+id/legendText5"
        style="@style/calender_day"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Thu" />

    <TextView
        android:id="@+id/legendText6"
        style="@style/calender_day"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Fri" />

    <TextView
        android:id="@+id/legendText7"
        style="@style/calender_day"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Sat"/>

</LinearLayout>
