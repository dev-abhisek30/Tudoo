<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Tudoo" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="android:forceDarkAllowed" tools:targetApi="q"> false </item>
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/black</item>
        <item name="colorSecondaryVariant">@color/black_50</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar" />

    <style name="addTaskAndUpdateTask">
        <item name="fontFamily">@font/montserratalternates_medium</item>
        <item name="android:textSize">@dimen/font_size_24</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_marginStart">@dimen/_24dp</item>
        <item name="android:layout_marginTop">@dimen/_24dp</item>
    </style>

    <style name="addTitleTxtAndUpdateTitleTxt">
        <item name="fontFamily">@font/montserratalternates_medium</item>
        <item name="android:textSize">@dimen/font_size_14</item>
        <item name="android:textColor">@color/black_50</item>
        <item name="android:layout_marginTop">32dp</item>
    </style>

    <style name="taskEditText">
        <item name="fontFamily">@font/montserratalternates_medium</item>
        <item name="android:textSize">@dimen/font_size_14</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/black</item>
        <item name="android:layout_marginEnd">@dimen/_24dp</item>
        <item name="android:layout_marginTop">@dimen/_12dp</item>
        <item name="android:ems">10</item>
        <item name="android:inputType">textPersonName</item>
        <item name="android:minHeight">@dimen/_48dp</item>
        <item name="android:paddingStart">0dp</item>
        <item name="android:paddingBottom">@dimen/_10dp</item>
        <item name="android:paddingTop">0dp</item>
    </style>

    <style name="style4">
        <item name="android:background">@drawable/main_button_bg</item>
        <item name="fontFamily">@font/montserratalternates_medium</item>
        <item name="android:textColor">@color/continue_text</item>
        <item name="android:textSize">@dimen/font_size_14</item>
        <item name="android:layout_marginStart">@dimen/_24dp</item>
        <item name="android:layout_marginEnd">@dimen/_24dp</item>
        <item name="android:layout_marginBottom">@dimen/_24dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="style5">
        <item name="fontFamily">@font/karla_bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/example_3_blue_light</item>
        <item name="android:layout_marginTop">0dp</item>
    </style>

    <style name="style6">
        <item name="fontFamily">@font/montserratalternates_medium</item>
        <item name="android:textSize">@dimen/font_size_14</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_marginBottom">@dimen/_24dp</item>
    </style>

    <style name="AppSearchView" parent="Widget.AppCompat.SearchView" >
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/montserratalternates_medium</item>
    </style>

    <style name="calender_date_number">
        <item name="android:fontFamily">@font/montserratalternates_medium</item>
        <item name="android:textSize">@dimen/font_size_14</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">@dimen/_1dp</item>
    </style>

    <style name="calender_day">
        <item name="android:fontFamily">@font/montserratalternates_medium</item>
        <item name="android:textSize">@dimen/font_size_14</item>
        <item name="android:textColor">@color/calendar_day</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="custom_row_priority_btn_txt">
        <item name="android:fontFamily">@font/montserratalternates_medium</item>
        <item name="android:paddingBottom">@dimen/_11dp</item>
        <item name="android:paddingTop">@dimen/_11dp</item>
        <item name="android:paddingStart">@dimen/_17dp</item>
        <item name="android:paddingEnd">@dimen/_17dp</item>
        <item name="android:textSize">@dimen/font_size_12</item>
        <item name="android:textColor">@color/app_orange</item>
    </style>

    <style name="custom_row_title_txt">
        <item name="android:fontFamily">@font/montserratalternates_medium</item>
        <item name="android:textSize">@dimen/font_size_14</item>
        <item name="android:textColor">@color/task_title_black</item>
        <item name="android:layout_marginTop">@dimen/_12dp</item>
        <item name="android:lineSpacingExtra">@dimen/font_size_8</item>
    </style>

    <style name="custom_row_due_txt">
        <item name="android:fontFamily">@font/montserratalternates_medium</item>
        <item name="android:textSize">@dimen/font_size_12</item>
        <item name="android:textColor">@color/task_title_black_30</item>
        <item name="android:layout_marginTop">@dimen/_12dp</item>
        <item name="android:layout_marginBottom">@dimen/_30dp</item>
    </style>
</resources>